/* 底部导航条 */
.fonter_head{
  display: flex;
  justify-content:space-around;
  background-color: white;
  width: 750rpx;
  position:fixed;
  bottom: 0;
  left: 0;
  padding: 6rpx;
}
.fonter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
}
.fonter image{
  width: 60rpx;
  height: 60rpx;
}

/* 意见弹框 */

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  

   .modal-dialog {
    width: 680rpx;
    overflow: hidden;
    position: fixed;
    top: 45%;
    left: 0;
    z-index: 9999;
    background-color: #f9f9f9;
    margin: -180rpx 36rpx;
    border-radius: 36rpx;
  }
