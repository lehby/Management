    background-color: #f5f5f5;
  }
.navbar{
    flex: none;
    display: flex;
    background: #fff;
  }
.navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 24rpx;
}
.navbar .item.active{
    color: #2269d4;
    height: 80rpx;
}
.navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #2269d4;
}
.form{
    padding: 0 20rpx;
    background-color: #fff;
    font-size: 28rpx;
    margin-top: 22rpx;
    
}
.form_top{
    height: 80rpx;
    line-height: 80rpx;
    display:flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #f5f5f5;
}
.form_middle{
    padding: 34rpx 0;
    border-bottom: 2rpx solid #f5f5f5;
}
.NewSingle_bottom{
    padding: 20rpx 0;
    display: flex;
    justify-content: flex-end;
}
.NewSingle_bottom>view{
    width: 160rpx;
    height: 62rpx;
    color: #fff;
    line-height: 62rpx;
    text-align: center;
    border-radius: 50rpx;
}

/* 底部导航条 */

.fonter_head {
  display: flex;
  justify-content: space-around;
  background-color: white;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 6rpx;
}

.fonter {
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
}

.fonter image {
  width: 60rpx;
  height: 60rpx;
}